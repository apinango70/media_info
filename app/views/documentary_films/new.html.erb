<div class="movie-container ">
  <h1>New Documentary Film</h1>
</div>


<div class="d-grid gap-2  mx-auto margen">
  <%= form_with(model: @documentary_film, url: documentary_films_path) do |form| %>

      <%= form.label :name %>
      <%= form.text_field :name %>

      <%= form.label :synopsis %>
      <%= form.text_area :synopsis %>

      <%= form.label :director %>
      <%= form.text_field :director %>

      <%= form.submit %>

  <% end %>
</div>
